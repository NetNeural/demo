# NetNeural IoT Platform Development Environment Configuration
# This file controls auto-startup behavior and service dependencies

# Auto-startup settings
AUTO_START_ENABLED=true
AUTO_RESTART_ON_CRASH=true
HEALTH_CHECK_INTERVAL=30
STARTUP_DELAY_BETWEEN_SERVICES=3

# Service configuration
SERVICES_REQUIRED="supabase,api,web"
SERVICES_OPTIONAL=""

# Port configuration  
WEB_PORT=3000
API_PORT=3001
SUPABASE_PORT=54321
SUPABASE_STUDIO_PORT=54323

# Logging configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=7
ENABLE_DETAILED_LOGGING=true

# Development mode settings
DEV_MODE=true
HOT_RELOAD_ENABLED=true
DEBUG_MODE=false

# Auto-startup behavior
# - AUTO: Services start automatically when needed
# - MANUAL: Services must be started manually
# - DAEMON: Background daemon monitors and restarts services
STARTUP_MODE=AUTO

# Dependency order (services start in this order)
SERVICE_START_ORDER="supabase,api,web"

# Health check URLs
HEALTH_CHECK_WEB="http://localhost:3000"
HEALTH_CHECK_API="http://localhost:3001/health"
HEALTH_CHECK_SUPABASE="http://127.0.0.1:54321"

# Error handling
MAX_RESTART_ATTEMPTS=3
RESTART_BACKOFF_SECONDS=5
CRASH_LOG_ENABLED=true

# Integration settings
ENABLE_REAL_TIME_SYNC=true
ENABLE_DATABASE_MIGRATIONS=true
ENABLE_API_VALIDATION=true
