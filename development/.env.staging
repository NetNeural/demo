# Staging Environment Variables for NetNeural IoT Platform
# These values are injected by GitHub Actions during staging deployment

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=staging
NEXT_PUBLIC_APP_NAME="NetNeural IoT Platform [STAGING]"
NEXT_PUBLIC_APP_VERSION="1.0.0-staging"
NEXT_PUBLIC_APP_URL="https://demo-stage.netneural.ai"

# ============================================================================
# Supabase Configuration (Staging)
# ============================================================================
# Managed via GitHub Secrets with STAGING_ prefix
# DO NOT set NEXT_PUBLIC_* variables here - they are injected by GitHub Actions
# Setting them here will override the secrets with placeholder text!
# NEXT_PUBLIC_SUPABASE_URL = set via GitHub Actions
# NEXT_PUBLIC_SUPABASE_ANON_KEY = set via GitHub Actions
# SUPABASE_SERVICE_ROLE_KEY = set via GitHub Actions
# SUPABASE_PROJECT_REF = set via GitHub Actions
# SUPABASE_DB_PASSWORD = set via GitHub Actions

# ============================================================================
# External API Integrations (Staging)
# ============================================================================
# DO NOT set API keys here - they are injected by GitHub Actions
# GOLIOTH_API_KEY = set via GitHub Actions
GOLIOTH_PROJECT_ID=nn-cellular-alerts-staging
GOLIOTH_BASE_URL=https://api.golioth.io

# ============================================================================
# GitHub Deployment Configuration
# ============================================================================
# GITHUB_TOKEN = set via GitHub Actions
# SUPABASE_ACCESS_TOKEN = set via GitHub Actions

# ============================================================================
# Static Export Configuration
# ============================================================================
BUILD_MODE=static
NEXT_PUBLIC_STATIC_EXPORT=true

# ============================================================================
# Feature Flags (Staging-specific)
# ============================================================================
ENABLE_DEBUG_MODE=true
ENABLE_TEST_DATA=true
DISABLE_RATE_LIMITING=true
